<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhanghao.wcx.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"></FrameLayout>
    <RadioGroup
        android:id="@+id/main_bottom_tabs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_selector"
            android:textColor="@drawable/main_color_selector"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawablePadding="@dimen/little_space"
            android:paddingLeft="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="@dimen/title_text_size"
            android:text="@string/Tab1"/>
        <RadioButton
            android:id="@+id/main_tuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tuan_selector"
            android:textColor="@drawable/main_color_selector"
            android:drawablePadding="@dimen/little_space"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/title_text_size"
            android:text="@string/Tab2"/>
        <RadioButton
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_search_selector"
            android:textColor="@drawable/main_color_selector"
            android:drawablePadding="@dimen/little_space"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/title_text_size"
            android:text="@string/Tab3"/>
        <RadioButton
            android:id="@+id/main_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_my_selector"
            android:textColor="@drawable/main_color_selector"
            android:drawablePadding="@dimen/little_space"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/title_text_size"
            android:text="@string/Tab4"/>
    </RadioGroup>

</LinearLayout>
