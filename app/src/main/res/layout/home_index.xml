<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/normal_orange_color">
        <TextView
            android:id="@+id/index_top_city"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home_ico_city"
            android:drawablePadding="@dimen/little_space"
            android:textColor="@color/white"
            android:text="选择城市"
            android:padding="@dimen/normal_space"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tab1"
            android:padding="@dimen/normal_space"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/index_top_scan"
            android:contentDescription="@null"
            android:layout_marginRight="@dimen/normal_space"
            android:src="@drawable/nav_icon_scan_nor"
            android:layout_marginEnd="56dp"
            android:layout_alignBottom="@+id/index_top_city"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>



</LinearLayout>